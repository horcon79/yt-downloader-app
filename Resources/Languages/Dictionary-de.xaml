<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    
    <!-- Main Window -->
    <sys:String x:Key="AppTitle">Horcon - Youtube Downloader V.1.4</sys:String>
    <sys:String x:Key="HeaderTitle">YouTube Downloader</sys:String>
    <sys:String x:Key="UrlGroupBoxHeader">Video-URL</sys:String>
    <sys:String x:Key="UrlToolTip">YouTube-Video- oder Shorts-URL einfügen</sys:String>
    <sys:String x:Key="PasteButton">Einfügen</sys:String>
    <sys:String x:Key="FormatGroupBoxHeader">Format</sys:String>
    <sys:String x:Key="Mp3Label">MP3 (Audio)</sys:String>
    <sys:String x:Key="M4aLabel">M4A (Audio)</sys:String>
    <sys:String x:Key="HistoryButton">Verlauf</sys:String>
    <sys:String x:Key="QualityGroupBoxHeader">Qualitätseinstellungen</sys:String>
    <sys:String x:Key="NoTranscodingLabel">A) Kein Transkodieren (am schnellsten)</sys:String>
    <sys:String x:Key="TranscodeLabel">B) Transkodieren (FFmpeg) und Bitrate einstellen</sys:String>
    <sys:String x:Key="VideoBitrateLabel">Video-Bitrate:</sys:String>
    <sys:String x:Key="CustomBitrateLabel">Bitrate eingeben (kbps):</sys:String>
    <sys:String x:Key="AudioBitrateLabel">Audio-Bitrate:</sys:String>
    <sys:String x:Key="OutputFolderGroupBoxHeader">Speicherordner</sys:String>
    <sys:String x:Key="SelectButton">Auswählen...</sys:String>
    <sys:String x:Key="ProgressGroupBoxHeader">Fortschritt</sys:String>
    <sys:String x:Key="DownloadButton">Herunterladen</sys:String>
    <sys:String x:Key="CancelButton">Abbrechen</sys:String>
    <sys:String x:Key="OpenFolderButton">Ordner öffnen</sys:String>
    <sys:String x:Key="ToolAvailabilityLabel">Werkzeugverfügbarkeit:</sys:String>
    <sys:String x:Key="YtdlpAvailable">yt-dlp: Verfügbar</sys:String>
    <sys:String x:Key="YtdlpNotAvailable">yt-dlp: Fehlt (Herunterladen nicht möglich)</sys:String>
    <sys:String x:Key="FfmpegAvailable">ffmpeg: Verfügbar</sys:String>
    <sys:String x:Key="FfmpegNotAvailable">ffmpeg: Fehlt (Transkodieren deaktiviert)</sys:String>
    <sys:String x:Key="ToolsLocationInfo">Werkzeuge sollten im Ordner 'tools/' neben der EXE liegen.</sys:String>
    <sys:String x:Key="LogGroupBoxHeader">Protokoll</sys:String>

    <!-- History Window -->
    <sys:String x:Key="HistoryTitle">Download-Verlauf</sys:String>
    <sys:String x:Key="HistoryHeader">Verlauf der letzten Downloads</sys:String>
    <sys:String x:Key="HistoryColumnDate">Datum</sys:String>
    <sys:String x:Key="HistoryColumnTitle">Titel</sys:String>
    <sys:String x:Key="HistoryColumnFormat">Format</sys:String>
    <sys:String x:Key="HistoryColumnActions">Aktionen</sys:String>
    <sys:String x:Key="OpenFolderButtonLong">Ordner öffnen</sys:String>
    <sys:String x:Key="ClearHistoryButton">Verlauf löschen</sys:String>
    <sys:String x:Key="CloseButton">Schließen</sys:String>

    <!-- Status Messages -->
    <sys:String x:Key="StatusStarting">Download wird gestartet...</sys:String>
    <sys:String x:Key="StatusDownloading">Wird heruntergeladen...</sys:String>
    <sys:String x:Key="StatusCancelling">Download wird abgebrochen...</sys:String>
    <sys:String x:Key="StatusFinished">Download abgeschlossen!</sys:String>
    <sys:String x:Key="StatusCancelled">Abgebrochen</sys:String>
    <sys:String x:Key="StatusError">Fehler</sys:String>
    <sys:String x:Key="StatusTranscoding">Transkodieren (FFmpeg)...</sys:String>

    <!-- Folder Picker -->
    <sys:String x:Key="SelectFolderDescription">Ordner zum Speichern der heruntergeladenen Dateien auswählen</sys:String>

    <!-- Dialogs -->
    <sys:String x:Key="ErrorItemNotFound">Ordner existiert nicht mehr.</sys:String>
    <sys:String x:Key="ConfirmClearHistory">Sind Sie sicher, dass Sie den gesamten Download-Verlauf löschen möchten?</sys:String>
    <sys:String x:Key="ConfirmTitle">Bestätigung</sys:String>
    <sys:String x:Key="InfoTitle">Information</sys:String>
    <sys:String x:Key="ErrorTitle">Fehler</sys:String>
    <sys:String x:Key="ErrorOpeningFolder">Fehler beim Öffnen des Ordners: {0}</sys:String>

    <!-- Logs -->
    <sys:String x:Key="LogStart">=== Download wird gestartet ===</sys:String>
    <sys:String x:Key="LogFinished">=== Download erfolgreich abgeschlossen ===</sys:String>
    <sys:String x:Key="LogCancelled">=== Download abgebrochen ===</sys:String>
    <sys:String x:Key="LogToolNotFound">WARNUNG: {0} nicht gefunden. Herunterladen wird nicht funktionieren.</sys:String>
    <sys:String x:Key="LogFfmpegNotFound">WARNUNG: ffmpeg.exe nicht gefunden. Transkodieren wird deaktiviert.</sys:String>

    <!-- Language Selection -->
    <sys:String x:Key="LanguageLabel">Sprache:</sys:String>

</ResourceDictionary>
