<Window x:Class="YoutubeDownloader.Views.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{DynamicResource HistoryTitle}" Height="450" Width="700"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{DynamicResource HistoryHeader}" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

        <ListView x:Name="HistoryListView" Grid.Row="1" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="{DynamicResource HistoryColumnDate}" DisplayMemberBinding="{Binding Date, StringFormat={}{0:yyyy-MM-dd HH:mm}}" Width="120"/>
                    <GridViewColumn Header="{DynamicResource HistoryColumnTitle}" DisplayMemberBinding="{Binding Title}" Width="300"/>
                    <GridViewColumn Header="{DynamicResource HistoryColumnFormat}" DisplayMemberBinding="{Binding Format}" Width="60"/>
                    <GridViewColumn Header="{DynamicResource HistoryColumnActions}" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="{DynamicResource OpenFolderButtonLong}" Click="OpenFolder_Click" Padding="5,1" Margin="2"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="{DynamicResource ClearHistoryButton}" Click="ClearHistory_Click" Padding="10,5" Margin="5,0"/>
            <Button Content="{DynamicResource CloseButton}" IsCancel="True" Padding="20,5" Margin="5,0"/>
        </StackPanel>
    </Grid>
</Window>
